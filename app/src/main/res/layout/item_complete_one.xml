<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/self_introduce"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/px10dp"
    app:layout_constraintTop_toBottomOf="@+id/idnumber"
    tools:layout_editor_absoluteX="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_xing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px16dp"
        android:layout_marginTop="@dimen/px6dp"
        android:textColor="@color/red"
        android:visibility="invisible"
        android:text="*"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/myself"
        android:textColor="@color/textColor"
        android:textSize="@dimen/px14sp"
        app:layout_constraintStart_toEndOf="@+id/tv_xing"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_value"
        android:layout_width="@dimen/px0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px90dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/boder_bg_edittext"
        android:gravity="left|top"
        android:padding="@dimen/px4dp"
        android:lines="6"
        android:lineSpacingExtra="@dimen/px2dp"
        android:maxLines="6"
        android:minLines="6"
        android:singleLine="false"
        android:textSize="@dimen/px12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1dp"
        android:background="@color/level5text"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>
