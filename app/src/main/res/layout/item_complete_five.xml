<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/px10dp"
    android:paddingBottom="@dimen/px10dp"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1dp"
        android:background="@color/level5text"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_xing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px16dp"
        android:layout_marginTop="@dimen/px22dp"
        android:text="*"
        android:textColor="@color/red"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="多图上传"
        android:textColor="@color/textColor"
        android:textSize="@dimen/px14sp"
        app:layout_constraintStart_toEndOf="@+id/tv_xing"
        app:layout_constraintTop_toTopOf="@+id/tv_xing" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_value"
        android:layout_width="@dimen/px0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px90dp"
        android:layout_marginTop="@dimen/px14dp"
        android:paddingBottom="@dimen/px10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</android.support.constraint.ConstraintLayout>
