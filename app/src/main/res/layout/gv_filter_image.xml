<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/px70dp"
    android:layout_marginEnd="@dimen/px4dp"
    android:layout_height="@dimen/px70dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/fiv"
        android:layout_width="@dimen/px60dp"
        android:layout_height="@dimen/px60dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@color/app_color_f6" />

    <ImageView
        android:id="@+id/iv_del"
        android:layout_width="@dimen/px30dp"
        android:layout_height="@dimen/px26dp"
        android:layout_alignTop="@id/fiv"
        android:layout_alignRight="@id/fiv"
        android:paddingStart="8dp"
        android:paddingBottom="8dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_delete_menu"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />


</android.support.constraint.ConstraintLayout>