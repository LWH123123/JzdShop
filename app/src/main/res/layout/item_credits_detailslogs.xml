<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/px10dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="@dimen/px40dp"
        android:layout_height="@dimen/px40dp"
        app:cardCornerRadius="@dimen/px20dp"
        app:cardElevation="@dimen/px0dp"
        android:layout_marginTop="@dimen/px10dp"
        android:layout_marginStart="@dimen/px10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_avater"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/textColor"
        android:layout_marginStart="@dimen/px10dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/card"
        app:layout_constraintStart_toEndOf="@+id/card"
        app:layout_constraintTop_toTopOf="@+id/card" />




    <TextView
        android:id="@+id/tv_date"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/card"
        android:layout_marginEnd="@dimen/px12dp"
        android:textSize="@dimen/px13sp"
        android:textColor="@color/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_time"
        android:text=""
        android:textSize="@dimen/px13sp"
        android:layout_marginEnd="@dimen/px12dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/px4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_date"
        android:textColor="@color/level3text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="@dimen/px10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/px60dp"
        android:layout_marginEnd="@dimen/px12dp"
        android:background="@color/viewhint"
        android:layout_width="@dimen/px0dp"
        android:layout_height="0.5dp"/>


</android.support.constraint.ConstraintLayout>
