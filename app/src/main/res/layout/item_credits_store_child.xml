<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/px180dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px6dp"
        android:layout_marginTop="@dimen/px10dp"
        android:layout_marginRight="@dimen/px6dp"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/px6dp"
        app:cardElevation="@dimen/px0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/consl_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/px12dp">

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="0dp"
                android:layout_height="@dimen/px172dp"
                android:src="@mipmap/placeholder"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!--活动类型-->
            <TextView
                android:id="@+id/tv_state"
                android:layout_width="@dimen/px40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/px6dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="@dimen/px8dp"
                android:background="@drawable/shape_credits_store_border_red_radius"
                android:gravity="center"
                android:padding="@dimen/px3dp"
                android:lineHeight="@dimen/px14dp"
                android:text="@string/coupon_exchage"
                android:textColor="@color/white"
                android:textSize="@dimen/px10sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_pic" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="@dimen/px120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px8dp"
                android:layout_marginEnd="@dimen/px6dp"
                android:ellipsize="end"
                android:lineHeight="@dimen/px18dp"
                android:lines="1"
                android:text=""
                android:gravity="center|left"
                android:padding="@dimen/px2dp"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/px12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/tv_state"
                app:layout_constraintTop_toBottomOf="@+id/iv_pic"
                tools:text="长相思干白葡萄酒萄酒萄" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px2dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/px4dp"
                android:layout_marginBottom="@dimen/px8dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:maxEms="3"
                android:singleLine="true"
                android:text=""
                tools:text="+¥199999999"
                android:textColor="@color/colorred"
                android:textSize="@dimen/px14sp"
                app:layout_constraintLeft_toRightOf="@id/tv_price_symbol"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />

            <TextView
                android:id="@+id/tv_credit_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/px6dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:singleLine="true"
                android:maxEms="3"
                android:text=""
                tools:text="1058105"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorred"
                android:textSize="@dimen/px14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />

            <TextView
                android:id="@+id/tv_coupon"
                android:layout_width="@dimen/px30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px10dp"
                android:layout_marginRight="@dimen/px8dp"
                android:background="@drawable/boder_red_textview"
                android:gravity="center"
                android:padding="@dimen/px2dp"
                android:lineHeight="@dimen/px14dp"
                android:text="@string/coupon_exchage"
                android:textColor="@color/colorred"
                android:textSize="@dimen/px10sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />

            <TextView
                android:id="@+id/tv_price_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="@dimen/px2dp"
                android:text="积分"
                android:textColor="@color/gray"
                android:textSize="@dimen/px10sp"
                app:layout_constraintLeft_toRightOf="@id/tv_credit_num"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>