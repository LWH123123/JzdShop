<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrl_refuse_tip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/defualt">

    <!-- 累计奖励 拒绝驳回 提示 module top tip  -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px12dp"
        android:layout_marginBottom="@dimen/px12dp"
        android:background="@color/white"
        android:padding="@dimen/px12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!--处理方式-->
        <TextView
            android:id="@+id/tv_refuseTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/assets_record_top_tip"
            android:textSize="@dimen/px14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px4dp"
            android:text=""
            android:textColor="@color/textcolor"
            android:textSize="@dimen/px20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_refuseTip"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="0.00元" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>