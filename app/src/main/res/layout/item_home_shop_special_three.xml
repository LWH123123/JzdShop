<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shop_special_three"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/ic_bg_home_shop_special"
    android:paddingLeft="@dimen/px12dp"
    android:paddingTop="@dimen/px10dp"
    android:paddingRight="@dimen/px12dp"
    android:paddingBottom="@dimen/px10dp">

    <!-- 广告位-->
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_shop_special_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@mipmap/placeholder"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_shop_special_right_top"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_shop_special_right_top"
        android:layout_width="0dp"
        android:layout_height="@dimen/px100dp"
        android:layout_marginLeft="@dimen/px10dp"
        android:layout_marginBottom="@dimen/px10dp"
        android:background="@mipmap/placeholder"
        android:visibility="visible"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/iv_shop_special_right_bottom"
        app:layout_constraintLeft_toRightOf="@id/iv_shop_special_left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_shop_special_right_bottom"
        android:layout_width="0dp"
        android:layout_height="@dimen/px100dp"
        android:layout_marginLeft="@dimen/px10dp"
        android:background="@mipmap/placeholder"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_shop_special_left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_shop_special_left" />

</android.support.constraint.ConstraintLayout>