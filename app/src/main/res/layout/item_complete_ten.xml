<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px80dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1dp"
        android:background="@color/level5text"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_xing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="*"
        android:textColor="@color/red"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/textColor"
        android:textSize="@dimen/px14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_xing"
        app:layout_constraintStart_toEndOf="@+id/tv_xing"
        app:layout_constraintTop_toTopOf="@+id/tv_xing" />

    <TextView
        android:id="@+id/tv_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/textColor"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tv_xing"
        app:layout_constraintTop_toTopOf="@+id/ed_valuetwo" />

    <EditText
        android:id="@+id/ed_valueone"
        android:layout_width="@dimen/px0dp"
        android:layout_marginStart="@dimen/px90dp"
        android:layout_height="@dimen/px22dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:hint="密码"
        android:inputType="textPassword"
        android:textSize="@dimen/px12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_valuetwo"
        android:layout_width="@dimen/px0dp"
        android:layout_height="@dimen/px22dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:inputType="textPassword"
        android:hint="确认密码"
        android:textSize="@dimen/px12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ed_valueone"
        app:layout_constraintTop_toBottomOf="@+id/ed_valueone"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:layout_width="@dimen/px0dp"
        android:layout_height="@dimen/px1dp"
        android:background="@color/level5text"
        app:layout_constraintBottom_toTopOf="@+id/ed_valueone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ed_valueone"
        app:layout_constraintTop_toBottomOf="@+id/ed_valuetwo" />

</android.support.constraint.ConstraintLayout>