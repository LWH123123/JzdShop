<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/con_good"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/px8dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_marginStart="@dimen/px10dp"
            android:layout_marginBottom="@dimen/px10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="@dimen/px10dp"
            app:cardElevation="0dp"
            android:layout_width="@dimen/px80dp"
            android:layout_height="@dimen/px80dp">
        <ImageView
            android:id="@+id/iv_good"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/tv_goodname"
            android:layout_width="@dimen/px244dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px6dp"
            android:lines="2"
            android:maxLines="2"
            android:text="@string/shop_message"
            android:textColor="@color/textColor"
            android:textSize="@dimen/px14sp"
            app:layout_constraintStart_toEndOf="@+id/card"
            app:layout_constraintTop_toTopOf="@+id/card" />

        <TextView
            android:id="@+id/tv_goodspec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px4dp"
            android:text="@string/add"
            android:textSize="@dimen/px12sp"
            app:layout_constraintStart_toStartOf="@+id/tv_goodname"
            app:layout_constraintTop_toBottomOf="@+id/tv_goodname" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dollar"
            android:textColor="@color/textColor"
            android:textSize="@dimen/px13sp"
            app:layout_constraintBottom_toBottomOf="@+id/card"
            app:layout_constraintStart_toStartOf="@+id/tv_goodname" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100.00"
            android:textColor="@color/textColor"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/textView2" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X12"
            android:textColor="@color/textColor"
            app:layout_constraintBottom_toBottomOf="@+id/tv_money"
            app:layout_constraintEnd_toEndOf="@+id/tv_goodname"
            android:layout_marginRight="@dimen/px12dp"/>

    </android.support.constraint.ConstraintLayout>
</LinearLayout>




