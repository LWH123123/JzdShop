<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/light1pink" />
            <stroke android:width="0.5px" android:color="@color/light2pink"/>
            <padding
                android:bottom="4dp"
                android:left="8dp"
                android:right="8dp"
                android:top="4dp" />
        </shape>
    </item>


    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/light1pink" />
            <stroke android:width="0.5px" android:color="@color/light2pink"/>
            <padding
                android:bottom="4dp"
                android:left="8dp"
                android:right="8dp"
                android:top="4dp" />
        </shape>
    </item>
</selector>